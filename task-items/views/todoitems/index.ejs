<div class="row">
    <a href='/toDoItems/addToDoItem' class='btn btn-primary btn-block'>Add To Do Item</a>
    <table class='table table-hover table-striped table-bordered'>
        <tr>
            <th>Title</th>
            <th>Category Name</th>
            <th>Due Date</th>            
            <th>Mark Completed</th>
        </tr>
        <% for(let i=0; i < toDoItems.length; i++) { %>
            <tr class="<%= toDoItems[i].DueDate < new Date() ? 'table-danger' : '' %>">
                <td><%= toDoItems[i].Title %></td>
                <td><%= toDoItems[i].Name %></td>
                <td><%= toDoItems[i].DueDate %></td>
                <td>
                    <form method="post" action="/todoitems/complete">
                        <input name="id" value="<%= toDoItems[i].ItemId %>" type="hidden" />
                        <button class="btn btn-primary">Mark as Completed</button>
                    </form>
                </td>
            </tr>
        <%}%> 
    </table>


</div>